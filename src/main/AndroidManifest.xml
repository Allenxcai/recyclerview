<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.imooc.recyclerview">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".BaseRecyclerViewActivity"></activity>
        <activity android:name=".StaggeredGridActivity"></activity>
        <activity android:name=".SplitLineRecyActivity"></activity>
        <activity android:name=".ChatGridActivity"></activity>
        <activity android:name=".ClickGridActivity"></activity>
        <activity android:name=".RefeshRecycleActivity"></activity>
    </application>

</manifest>